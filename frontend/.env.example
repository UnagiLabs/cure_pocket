# CurePocket Frontend Environment Variables Template
# Copy this file to .env.local for local development

# ==========================================
# Sui Network Configuration
# ==========================================
NEXT_PUBLIC_SUI_NETWORK=testnet
# Options: mainnet, testnet, devnet, localnet

# ==========================================
# Sui Contract Configuration
# ==========================================
# These values are set after deploying the contract
NEXT_PUBLIC_PACKAGE_ID=
NEXT_PUBLIC_PASSPORT_REGISTRY_ID=
NEXT_PUBLIC_ADMIN_CAP_ID=
NEXT_PUBLIC_UPGRADE_CAP_ID=

# ==========================================
# Walrus Storage Configuration
# ==========================================
# Walrus RPC endpoint for blob storage
NEXT_PUBLIC_WALRUS_RPC_URL=https://walrus-testnet-api.mystenlabs.com
# Alternative: https://walrus-mainnet-api.mystenlabs.com

# Server-side Walrus configuration (DO NOT expose to client)
WALRUS_PRIVATE_KEY=

# ==========================================
# Seal Encryption Service Configuration
# ==========================================
# Seal server URL for encryption/decryption
NEXT_PUBLIC_SEAL_SERVER_URL=https://seal-testnet.mystenlabs.com
# Alternative: https://seal-mainnet.mystenlabs.com

# Seal API credentials (server-side only)
SEAL_API_KEY=

# ==========================================
# Application Configuration
# ==========================================
# Base URL for API routes (usually not needed for Next.js)
NEXT_PUBLIC_API_BASE_URL=/api

# ConsentToken time-to-live in hours (default: 24)
NEXT_PUBLIC_CONSENT_TOKEN_TTL_HOURS=24

# ==========================================
# Analytics Configuration
# ==========================================
# Enable anonymous analytics submission
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Analytics submission endpoint (optional, for future use)
ANALYTICS_SUBMISSION_URL=

# ==========================================
# Development & Debugging
# ==========================================
# Enable debug logs
NEXT_PUBLIC_DEBUG=false

# Mock mode for development without actual Walrus/Seal
NEXT_PUBLIC_MOCK_STORAGE=false
