# ==========================================
NEXT_PUBLIC_PACKAGE_ID=0x0303e1578d070f6e076d43531bc86e71e4d1557007d893a9ee4edb7fb7245d0a
NEXT_PUBLIC_PASSPORT_REGISTRY_ID=0x2a0f4c73facc734d5b008512caec12e84c92a6c546b801b6b80646fc39ea66b3
